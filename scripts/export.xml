<project name="Logging" default="complete-export" basedir="../">
	<property name="packages" value="net.xqhs.util.logging" />

	<property name="project-name" value="${ant.project.name}" />
	<property name="doc-access-level" value="private" />
	<property name="java-version" value="1.7" />


	<property name="libs.dir" location="lib" />
	<path id="build.classpath">
		<fileset dir="${libs.dir}"
		         includes="**/*.jar"
		         erroronmissingdir="false"
		/>
	</path>

	<target name="javadoc">
		<javadoc access="${doc-access-level}"
		         author="true"
		         classpath="."
		         classpathref="build.classpath"
		         destdir="doc-${project-name}/pages/javadoc"
		         nodeprecated="false"
		         nodeprecatedlist="false"
		         noindex="false"
		         nonavbar="false"
		         notree="false"
		         packagenames="${packages}"
		         source="${java-version}"
		         sourcepath="src"
		         splitindex="false"
		         use="true"
		         version="true"
		>
			<header>
				Copyright (C) 2013 Andrei Olaru under the GNU General Public License. See &lt;a href=\"http://www.gnu.org/licenses/\"&gt;http://www.gnu.org/licenses/&lt;/a&gt;.
			</header>
		</javadoc>
	</target>

	<target name="pack">
		<jar destfile="deploy/${project-name}.jar">
			<fileset dir="bin" includes="net/" />
			<fileset dir="."
			         includes="src/,doc-${project-name}/,doc-${project-name}-additional/,info-${project-name}/"
			/>
		</jar>
		<copy file="lib/Config.jar" todir="deploy/" />
		<copy file="lib/log4j-1.2.16.jar" todir="deploy/" />
	</target>

	<target name="pack-java6">
		<ant antfile="scripts/build-java6.xml" dir="." />
		<jar destfile="deploy/java6/${project-name}.jar">
			<fileset dir="bin-java6" includes="net/" />
			<fileset dir="."
			         includes="src/,doc-${project-name}/,info-${project-name}/"
			/>
		</jar>
		<jar destfile="deploy/java6/${project-name}-full.jar">
			<zipgroupfileset dir="." includes="deploy/java6/${project-name}.jar,deploy/java6/Config.jar" />
			<zipgroupfileset dir="." includes="lib/" excludes="lib/Config.jar" />
		</jar>
	</target>

	<target name="fullpack">
		<jar destfile="deploy/${project-name}-full.jar">
			<zipgroupfileset dir="." includes="deploy/${project-name}.jar" />
			<zipgroupfileset dir="." includes="lib/" />
		</jar>
	</target>

	<target name="copy-importer">
		<copy file="scripts/outside-importer.xml"
		      tofile="deploy/importer.xml"
		/>
	</target>

	<target name="complete-export"
	        depends="javadoc,pack,pack-java6,fullpack,copy-importer"
	/>

</project>
