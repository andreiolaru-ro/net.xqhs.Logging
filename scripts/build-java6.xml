<project name="Logging" default="build-java6" basedir="../">

	<property name="src" value="src/" />
	<property name="build" value="bin-java6/" />
	<property name="build.sysclasspath" value="ignore" />
	<path id="cp">
		<fileset dir="lib/">
			<include name="*.jar" />
			<exclude name="Config.jar" />
		</fileset>
		<fileset dir="deploy/java6/">
			<include name="Config.jar" />
			<exclude name="*.jar" />
		</fileset>
	</path>

	<target name="build-java6">
		<javac srcdir="${src}" destdir="${build}" fork="true" target="1.6">
			<classpath refid="cp" />
		</javac>
	</target>

</project>
