<project default="import">

	<!-- the directory where the project is, relative to the parent of the current project -->
	<property name="import-directory" value="." />

	<!-- the target for the current project -->
	<target name="Config">
		<copy file="../${import-directory}/Config/deploy/Config.jar" todir="lib/" />
		<copy file="../${import-directory}/Config/deploy/java6/Config.jar" todir="deploy/java6/" />
	</target>

	<target name="import" depends="Config" />
</project>
